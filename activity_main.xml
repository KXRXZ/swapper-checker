<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center|top"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/DisplayA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Display A"
        android:inputType="text"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/DisplayB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/DisplayA"
        android:hint="Display B"
        android:inputType="text"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/swap"
        android:text="SWAP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15sp"
        android:layout_toRightOf="@+id/DisplayA"/>

    <Button
        android:id="@+id/check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/swap"
        android:layout_marginLeft="15sp"
        android:layout_toRightOf="@+id/DisplayB"
        android:text="CHECK" />


</RelativeLayout>